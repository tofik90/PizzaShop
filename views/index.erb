<h2>Welcome to Pizza Shop!</h2>

<div class="row">

	<% @products.each do |p| %>
		<div class="col-md-3">
			<div>
				<%= p.title %>				
			</div>
			<div>
				<img src="<%= p.path_to_image %>" height="250" width="250">
			</div>
			<div>
				Price: $<%= p.price %>
			</div> 
			<div>
				Size: <%= p.size%>
			</div>
			<div>
				<%= p.description %>
			</div>

			<div>
				<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
			</div>
		</div>
	<% end %>

</div>
<br>
<br>
<button class="btn btn-primary" onclick="something()">Click me!</button>

<script type="text/javascript">
	$(function() {
		update_orders_input();
	});
</script>

