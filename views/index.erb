<h2>Welcome to Pizza Shop!</h2>

<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
			<%= p.title %>				
		</div>
		<div>
			<img src="<%= p.path_to_image %>" height="250" width="250">
		</div>
		<div>
			Price: $<%= p.price %>
		</div> 
		<div>
			Size: <%= p.size%>
		</div>
		<div>
			<%= p.description %>
		</div>

		<div>
			
		</div>
	</div>
<% end %>

<button class="btn btn-primary" onclick="something()">Click me!</button>

